{% extends 'base.html.twig' %}
{% block head %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('/css/estiloinicio.css') }}" type="text/css">
{% endblock %}


{% block body %}
<div class="container">
    <div class="row">
        <!-- aqui se harÃ­a el for de usuarios !-->
        {% for banda in bandas %}
            <div class="col-lg-4">
                <img class="rounded-circle" src="{{ asset('/imagenes/') }}/{{ banda.foto }}" alt="Generic placeholder image" width="140" height="140">
                <a href="{{ path('ver_usuario',{id:banda.id}) }}"><h2>{{ banda.nombre }} {{ banda.apellidos }}</h2></a>
                <p><a class="btn btn-primary" href="#" role="button">Ver perfil</a></p>
            </div>
        {% else %}
            <p>No se ha encontrado ninguna banda.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}