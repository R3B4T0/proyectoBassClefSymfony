{% extends 'base.html.twig' %}
{% block head %}
    {{ parent() }}
    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('/css/estiloinicio.css') }}" type="text/css">
    {% endblock %}
{% endblock %}


{% block body %}
<div class="container marketing">
    <div class="row">
        <!-- aquí se haría el for de músicos !-->
        {% for musico in musicos %}
            <div class="col-lg-4">
                <img class="rounded-circle" src="{{ asset('/imagenes/') }}/{{ musico.foto }}" alt="Generic placeholder image" width="140" height="140">
                <h2>{{ musico.nombre }} {{ musico.apellidos }}</h2>
                <p><a class="btn btn-primary" href="{{ path('ver_perfil',{id:musico.id}) }}" role="button">Ver perfil</a></p>
            </div>
        {% else %}
            <p>No se ha encontrado ningún músico.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}